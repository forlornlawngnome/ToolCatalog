<%if current_user.is_admin%>
	<h2>Current Forms</h2>
	<%if current_user.try(:is_admin)%>
		<table class="table table-hover">
			<tr>
				<th>User</th>
				<th>Email</th>
				<%@forms.each do |form|%>
					<th>
						<%=form.name%>
					</th>
				<%end%>
				<th>
					Edit
				</th>
			</tr>
			<%@users.each do |user|%>
				<tr>
					<td>
						<%=user.name%>
					</td>
					<td>
						<%=user.email%>
					</td>
					<%@forms.each do |form|%>
						<%has_form = user.forms.include?(form)%>
						<%if has_form%>
							<% cell_class="success"%>
						<%else%>
							<% cell_class="danger"%>
						<%end%>
						<td class=<%="#{cell_class}"%>>
							<%=has_form%>
						</td>
					<%end%>
					<td><%=link_to '', edit_person_path(user), :class=>"glyphicon glyphicon-pencil" %></td>
				</tr>
			<%end%>
	
		</table>
	<%end%>
<%else%>
	<%=render "/layouts/no_approval"%>
<%end%>