<h1>Listing Categories/Courses</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Category</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories_courses.each do |categories_course| %>
      <tr>
        <td><%= link_to categories_course.category.name, categories_course.category rescue ""%></td>
        <td><%= link_to categories_course.course.name, categories_course.course rescue ""%></td>
        <td><%= link_to 'Show', categories_course %></td>
        <td><%= link_to fa_icon("pencil"), edit_categories_course_path(categories_course) %></td>
        <td><%= link_to fa_icon("trash-o"), categories_course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to "#{fa_icon("plus")} New Category/Course".html_safe, new_categories_course_path, :class=>"btn btn-primary" %>