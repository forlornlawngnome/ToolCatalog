<h1>Listing Categories/Tools</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Tool</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories_tools.each do |categories_tool| %>
      <tr>
        <td><%= link_to categories_tool.tool.name, categories_tool.tool %></td>
        <td><%= link_to categories_tool.category.name, categories_tool.category %></td>
        <td><%= link_to 'Show', categories_tool %></td>
        <td><%= link_to fa_icon("pencil"), edit_categories_tool_path(categories_tool) %></td>
        <td><%= link_to fa_icon("trash-o"), categories_tool, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "#{fa_icon("plus")} New Category/Tool".html_safe, new_categories_tool_path, :class=>"btn btn-primary" %>
