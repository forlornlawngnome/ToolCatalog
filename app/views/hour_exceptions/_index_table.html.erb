<table class="table table-hover">
  <thead>
    <tr>
		<th>Date</th>
    	<th>Time beginning</th>
    	<th>Time ending</th>
    	<th>Person</th>
    	<th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% hour_exceptions.each do |hour_exception| %>
      <tr>
		<td><%= link_to local_time(hour_exception.time_beginning, "%B %e, %Y"), hour_exception %></td>
        <td><%= local_time hour_exception.time_beginning, "%I:%M:%S %p" %></td>
        <td><%= local_time hour_exception.time_ending, "%I:%M:%S %p" %></td>
        <td><%= link_to hour_exception.person.name, hour_exception.person unless hour_exception.person.nil? %></td>
        <td><%= link_to fa_icon("pencil"), edit_hour_exception_path(hour_exception) %></td>
        <td><%= link_to fa_icon("trash-o"), hour_exception, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>