<!DOCTYPE html>
<html>
<head>
  <title>Fablab</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <style>
	  body { padding-top: 60px; }
  </style>
</head>

<% content_for :body do %>
    <% if controller.controller_name == 'tool_import'%>
        <body data-no-turbolink="true">
    <% end %>
<% end %>
	<div class="container-fluid">
		<%=render "/layouts/nav"%>
		<div class="col-md-1">
		</div>
		<div class="col-md-10">
			<%if notice%>
				<div class="alert alert-success" data-dismiss="alert">
					<%= notice %>
					<span aria-hidden="true" class="pull-right"><%=fa_icon("close")%></span>
				</div>
			<%elsif alert%>
				<div class="alert alert-danger" data-dismiss="alert">
					<%= alert %>
					<span aria-hidden="true" class="pull-right"><%=fa_icon("close")%></span>
				</div>
			<%end%>
			<%= yield %>
		</div>
	</div>
</body>
<footer>
	<hr />
	<br />
	<br />
</footer>
</html>
