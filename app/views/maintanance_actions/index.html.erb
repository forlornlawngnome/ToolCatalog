<h1>Listing All Maintenance Performed</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Tool</th>
      <th>Person</th>
      <th>Maintanance type</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @maintanance_actions.each do |maintanance_action| %>
      <tr>
        <td><%= link_to maintanance_action.date, maintanance_action %></td>
        <td><%= link_to maintanance_action.tool.name, maintanance_action.tool %></td>
        <td><%= link_to maintanance_action.person.name, maintanance_action.person %></td>
        <td><%= link_to maintanance_action.maintanance_type.name, maintanance_action.maintanance_type %></td>
        <td><%= link_to fa_icon("pencil"), edit_maintanance_action_path(maintanance_action) %></td>
        <td><%= link_to fa_icon("trash-o"), maintanance_action, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "#{fa_icon("plus")} New Maintenance Action".html_safe, new_maintanance_action_path, :class=>"btn btn-primary" %>