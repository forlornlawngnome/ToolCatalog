<h1>Listing All Maintenance Performed</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Tool</th>
      <th>Person</th>
      <th>Maintenance type</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @maintenance_actions.each do |maintenance_action| %>
      <tr>
        <td><%= link_to maintenance_action.date, maintenance_action %></td>
        <td><%= link_to maintenance_action.tool.name, maintenance_action.tool %></td>
        <td><%= link_to maintenance_action.person.name, maintenance_action.person %></td>
        <td><%= link_to maintenance_action.maintenance_type.name, maintenance_action.maintenance_type %></td>
        <td><%= link_to fa_icon("pencil"), edit_maintenance_action_path(maintenance_action) %></td>
        <td><%= link_to fa_icon("trash-o"), maintenance_action, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "#{fa_icon("plus")} New Maintenance Action".html_safe, new_maintenance_action_path, :class=>"btn btn-primary" %>