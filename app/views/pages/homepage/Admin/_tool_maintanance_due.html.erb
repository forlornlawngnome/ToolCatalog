<%color = "green"%>
<div class="alert <%="#{color}"%>"%>
	<h5>Tools Needing Maintanance</h5>
</div>
<dl>
	<%if @tools_maintanance.size ==0%>
		<i>There are no tools needing maintanance right now.</i>
	<%else%>
		<%@tools_maintanance.each do |tool|%>
			<%actions = tool.maintanance_action_required%>
			<dt><%=tool.name%></dt>
			<dd>
				<ul>
					<%actions.each do |action|%>
						<li><%=action.name%></li>
					<%end%>
				</ul>
			</dd>
		<%end%>
	<%end%>
</dl>
<%=link_to fa_icon("plus")+" New Action", new_maintanance_action_path, :class=>"btn #{color} fixed_bottom"%>