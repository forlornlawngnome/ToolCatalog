<table class="table table-hover">
  <thead>
    <tr>
      <th>Person</th>
      <th>Space</th>
      <th>Reservation beginning</th>
      <th>Reservation ending</th>
      <th>Number of people</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% space_reservations.each do |space_reservation| %>
      <tr>
        <td><%= link_to space_reservation.person.name, space_reservation.person %></td>
        <td><%= link_to space_reservation.space.name, space_reservation.space %></td>
        <td><%= local_time space_reservation.reservation_beginning, "%a %B %d - %I:%M %p" %></td>
        <td><%= local_time space_reservation.reservation_ending, "%a %B %d - %I:%M %p" %></td>
        <td><%= space_reservation.number_of_people %></td>
        <td><%= link_to 'Show', space_reservation %></td>
        <td><%= link_to fa_icon("pencil"), edit_space_reservation_path(space_reservation) %></td>
        <td><%= link_to fa_icon("trash-o"), space_reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>