<br />
<%=render "tool_container", :tool=>@tool%>

<%if current_user.is_admin || current_user.is_student_admin%>
	<h3>Recent Usage</h3>
	<hr />
	<%@tool.tool_logs.order("time_in DESC").limit(20).each do |log|%>
		<li><%=link_to log.person.name, log.person%>: <%=local_time log.time_in%> - <%=local_time log.time_out rescue ""%></li>
	<%end%>
<%end%>

<%= link_to 'Back', back_link, :class=>"btn btn-danger pull-right" %>
